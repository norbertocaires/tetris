#ifndef _parametros_h
#define _parametros_h

#define POS_L 5 /** Constante que indica a linha inicial onde o tabuleiro será imprimido */
#define POS_C 10 /**   Constante que indica a coluna inicial onde o tabuleiro será imprimido*/
